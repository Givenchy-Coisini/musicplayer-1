/* components/search/search.wxss */

.container {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
    position: relative;
}

.bar {
    flex: 4;
    height: 68rpx;
    font-size: 28rpx;
    border-radius: 50rpx;
    background-color: #f5f5f5;
    padding-left: 60rpx;
}

.search {
    flex: 1;
    background: #d81e06;
    color: #fff;
    /* margin-left: 20rpx; */
    font-size: 28rpx;
    border-radius: 30rpx;
}
.in-bar {
    color:#999;
}
.find{
    position: absolute;
    top:50%;
    transform: translate(16rpx,-50%);
    color:#9f9f9f;
}